                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3">NOT DONE ORDER 1</TextBlock>
                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3">NOT DONE ORDER 1</TextBlock>
                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3">NOT DONE ORDER 1</TextBlock>
                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3">NOT DONE ORDER 1</TextBlock>
                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3">NOT DONE ORDER 1</TextBlock>
                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3">NOT DONE ORDER 1</TextBlock>
                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3">NOT DONE ORDER 1</TextBlock>
                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3">NOT DONE ORDER 1</TextBlock>
                </WrapPanel>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <TextBlock Text="Completed Orders" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" FontWeight="Bold" FontFamily="Arial Black"/>
            <StackPanel>
                <WrapPanel>
            <TextBlock Text="COMPLETED ORDER 1" Foreground="Green" FontWeight="Bold" Margin="3"/>
