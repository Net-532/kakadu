<Window x:Class="Kakadu.OrderQueue.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kakadu.OrderQueue"
        mc:Ignorable="d"
        Title="Order Queue" Height="450" Width="800">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Orders" HorizontalAlignment="Center" FontSize="18" FontWeight="Bold" FontFamily="Arial Black"/>
            <ListBox Name="ordersListBox" HorizontalContentAlignment="Stretch"/>
            <Button Content="Update" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Height="30" Click="UpdateButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
