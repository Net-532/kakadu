<UserControl x:Class="Backoffice.Views.Products"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Backoffice.Views"
             mc:Ignorable="d" 
             Height="auto" Width="Auto"
             Loaded="UserControl_Loaded"
             Background="LightGray">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" x:Name="ProductButtonsPanel" Grid.Row="0" HorizontalAlignment="Right" Margin="5">
            <Button x:Name="AddButton" Content="Додати" Margin="5" Click="AddProduct"/>
            <Button x:Name="EditButton" Content="Редагувати" Margin="5" Click="EditProduct"/>
            <Button x:Name="DeleteButton" Content="Видалити" Margin="5" Click="DeleteProduct"/>
        </StackPanel>

        <DataGrid x:Name="dataGrid" Grid.Row="1" Margin="91,5,0,0" AutoGenerateColumns="True" IsReadOnly="True" Background="White"/>
    </Grid>
</UserControl>
