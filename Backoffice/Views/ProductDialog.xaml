<Window x:Class="Kakadu.Backoffice.Views.ProductDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Деталі продукту" 
        Height="415" Width="500"
        WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">

    <StackPanel Margin="10">
       

        <Label Content="Назва" Style="{StaticResource FormLabel}"/>
        <TextBox x:Name="TitleTextBox" Style="{StaticResource FormInput}"/>

        <Label Content="Ціна" Style="{StaticResource FormLabel}"/>
        <TextBox x:Name="PriceTextBox" Style="{StaticResource FormInput}"/>

        <Label Content="Фото URL" Style="{StaticResource FormLabel}"/>
        <TextBox x:Name="PhotoUrlTextBox" Style="{StaticResource FormInput}"/>

        <Label Content="Опис" Style="{StaticResource FormLabel}"/>
        <TextBox x:Name="DescriptionTextBox" Style="{StaticResource FormInput}" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Зберегти" Margin="0,0,5,0" Width="80" Click="SaveButton_Click"/>
            <Button Content="Скасувати" Width="80" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
