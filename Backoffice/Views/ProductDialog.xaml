<Window x:Class="Kakadu.Backoffice.Views.ProductDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Деталі продукту" 
        Height="550" Width="600"
        WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">

            <Label Content="Назва" Style="{StaticResource FormLabel}"/>
            <TextBox x:Name="TitleTextBox" Style="{StaticResource FormInput}"/>

            <Label Content="Ціна" Style="{StaticResource FormLabel}"/>
            <TextBox x:Name="PriceTextBox" Style="{StaticResource FormInput}"/>
            <Label x:Name="PriceErrorLabel" Foreground="Red" Visibility="Collapsed" Margin="5"/>

            <Label Content="Фото URL" Style="{StaticResource FormLabel}"/>
            <TextBox x:Name="PhotoUrlTextBox" Style="{StaticResource FormInput}" TextChanged="PhotoUrlTextBox_TextChanged"/>

            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="5">
                <Image x:Name="PhotoPreview" Width="80" Height="80" Source="/burger_logo.png"/>
            </Border>

            <Label Content="Опис" Style="{StaticResource FormLabel}"/>
            <TextBox x:Name="DescriptionTextBox" Style="{StaticResource FormInput}" Height="120" TextWrapping="Wrap" AcceptsReturn="True"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Зберегти" Margin="0,0,5,0" Width="80" Click="SaveButton_Click"/>
            <Button Content="Скасувати" Width="80" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
