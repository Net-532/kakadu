<Window x:Class="Kakadu.Backoffice.Views.ProductDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Деталі продукту" Height="415" Width="500"
        WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">

    <StackPanel Margin="10">
        <Label Content="ID:"/>
        <TextBox x:Name="IdTextBox" IsReadOnly="True" Margin="0,0,0,10" Foreground="#FF737373"/>

        <Label Content="Назва:"/>
        <TextBox x:Name="TitleTextBox" Margin="0,0,0,10"/>

        <Label Content="Ціна:"/>
        <TextBox x:Name="PriceTextBox" Margin="0,0,0,10"/>

        <Label Content="Фото URL:"/>
        <TextBox x:Name="PhotoUrlTextBox" Margin="0,0,0,10"/>

        <Label Content="Опис:"/>
        <TextBox x:Name="DescriptionTextBox" Margin="0,0,0,10" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Зберегти" Margin="0,0,5,0" Width="80" Click="SaveButton_Click"/>
            <Button Content="Скасувати" Width="80" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
