<Window x:Class="Kakadu.Backoffice.Views.infoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kakadu.Backoffice.Views"
        mc:Ignorable="d"
        Title="Про програму" Height="450" Width="800">
    <DockPanel>


        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="ContentPanel" Orientation="Vertical">
                <Image Source="/burger.png" Grid.Row="0"/>
                <TextBlock Text="Какаду - Backoffice" FontSize="48" HorizontalAlignment="Center" Margin="0,30,0,5" FontFamily="Bahnschrift Condensed"/>

                <Image Source="/logo.png" Grid.Row="0" Height="170" Width="277"/>

                <TextBlock Text="v0.3.0" Margin="10,0,10,0" FontSize="24" HorizontalAlignment="Center" FontFamily="Bahnschrift Light"/>
                <TextBlock Text="Developers :" Margin="10,20,10,0" FontSize="36" HorizontalAlignment="Center" FontFamily="Bahnschrift Condensed" FontWeight="Bold"/>

                <Button Content="Повернутись назад" Height="20" Width="799" HorizontalAlignment="Left" Margin="0,60,0,0" Click="BackButton_Click"/>




            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>