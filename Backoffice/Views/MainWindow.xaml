<Window x:Class="Kakadu.Backoffice.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kakadu.Backoffice.Views" 
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Title="Какаду - Backoffice" Height="450" Width="800">

    <DockPanel>
        
        <ListView DockPanel.Dock="Left" Style="{StaticResource NavigationBar}">
            <fa:ImageAwesome Icon="Cutlery" Style="{StaticResource IconStyle}" MouseLeftButtonDown="ProductIcon_Click"/>
            <fa:ImageAwesome Icon="Users" Style="{StaticResource IconStyle}" MouseLeftButtonDown="UserIcon_Click"/>
            <fa:ImageAwesome Icon="PencilSquareOutline" Style="{StaticResource IconStyle}" MouseLeftButtonDown="OrderIcon_Click"/>
            <fa:ImageAwesome Icon="SignOut" Style="{StaticResource IconStyle}" MouseLeftButtonDown="ExitIcon_Click"/>
        </ListView>
        <ContentControl x:Name="MainFrame"/>

    </DockPanel>
</Window>
