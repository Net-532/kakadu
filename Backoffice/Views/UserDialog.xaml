<Window x:Class="Kakadu.Backoffice.Views.UserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Деталі користувача" Height="415" Width="500"
        WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">

    <StackPanel Margin="10">
        <Label Content="ID:"/>
        <TextBox x:Name="IdTextBox" IsReadOnly="True" Margin="0,0,0,10" Foreground="#FF737373" Height="25"/>

        <Label Content="Ім'я користувача:"/>
        <TextBox x:Name="UsernameTextBox" Margin="0,0,0,10" Height="25"/>

        <Label Content="Ім'я:"/>
        <TextBox x:Name="FirstNameTextBox" Margin="0,0,0,10" Height="25"/>

        <Label Content="Прізвище"/>
        <TextBox x:Name="LastNameTextBox" Margin="0,0,0,10" Height="25"/>

        <Label Content="Пароль:"/>
        <TextBox x:Name="PasswordTextBox" Margin="0,0,0,10" TextWrapping="Wrap" Height="25"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Зберегти" Margin="0,0,5,0" Width="80" Click="SaveButton_Click"/>
            <Button Content="Скасувати" Width="80" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
