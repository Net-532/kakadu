<UserControl x:Class="Backoffice.Views.Users"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Backoffice.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal" x:Name="UserButtonsPanel" Grid.Row="0" Visibility="Hidden" HorizontalAlignment ="Right" Margin="5">
            <Button x:Name="AddUserButton" Content="Додати Користувача" Margin="5" Click="AddUser"/>
            <Button x:Name="EditUserButton" Content="Редагувати Користувача" Margin="5" Click="EditUser"/>
            <Button x:Name="DeleteUserButton" Content="Видалити Користувача" Margin="5" Click="DeleteUser"/>
            <DataGrid x:Name="dataGrid" Visibility="Visible" Grid.Row="1" Margin="5" AutoGenerateColumns="True" IsReadOnly="True"/>
        </StackPanel>
    </Grid>
</UserControl>
